<h1>Books</h1>

<table>
  <tr>
    <th>Name</th>

    <th>Genre</th>

    <th>Description</th>
  </tr>
  <% for book in @books %>
  <tr>

    <td><a href="/books/<%= book.id %>"><%= book.name %></a></td>
    <td><%= book.genre %></td>
    <td><%= book.description %></td>

  </tr>

  <% end %>

</table>
